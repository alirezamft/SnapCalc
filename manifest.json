{
  "manifest_version": 3,
  "name": "Snapp Rides Calculator",
  "version": "10.0.1",
  "description": "جمع هزینه ریالی سفرهای اسنپ + محاسبه دلاری و بیتکوینی",
   
  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "SnapCalc",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },

  "permissions": [
    "tabs",
    "activeTab",
    "downloads",
    "storage"         
  ],
  "host_permissions": [
    "https://app.snapp.taxi/*",
    "https://api.nobitex.ir/*",
    "https://apiv2.nobitex.ir/*",
    "<all_urls>"
  ],

  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://app.snapp.taxi/*"],
      "js": [
        "price-provider.js",
        "usd-calc.js",
        "btc-calc.js",
        "ui-skin.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
